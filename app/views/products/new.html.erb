<% provide(:title, "Create product") %>
<h1>Create product</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |form| %>
      <%= render "fields", form: form %>
      <%= form.submit "Create product", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
